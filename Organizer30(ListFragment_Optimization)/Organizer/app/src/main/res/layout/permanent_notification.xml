<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageViewAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@+id/imageViewToSettings"
        android:layout_toStartOf="@+id/imageViewToSettings"
        android:contentDescription="@string/action_settings"
        android:src="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/imageViewToSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewAddTask"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:contentDescription="@string/action_settings"
        android:src="@android:drawable/btn_star_big_on" />

    <ImageView
        android:id="@+id/imageViewAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageViewAddTask"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:contentDescription="@string/action_settings"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textViewTaskAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageViewAppIcon"
        android:layout_toRightOf="@+id/imageViewAppIcon"
        android:text="Кол-во задач"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Notification.Title"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTaskAmount"
        android:layout_alignStart="@+id/textViewTaskAmount"
        android:layout_below="@+id/textViewTaskAmount"
        android:text="Хорошего дня!"
        style="@style/TextAppearance.AppCompat.Notification.Info"/>


</RelativeLayout>